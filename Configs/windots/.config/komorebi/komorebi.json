{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.38/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Hide",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": false,
  "default_workspace_padding": 7,
  "default_container_padding": 7,
  "border": true,
  "border_width": 2,
  "border_offset": -1,
  "border_radius": 5,
  "theme": {
    "palette": "Custom",
    "accent": "Base0A",
    "colours": {
      "base_00": "#0e1017",
      "base_01": "#161924",
      "base_02": "#23293b",
      "base_03": "#3e465e",
      "base_04": "#5b6685",
      "base_05": "#c0c8d8",
      "base_06": "#e4e8f0",
      "base_07": "#ffffff",
      "base_08": "#e06c75",
      "base_09": "#e69b75",
      "base_0a": "#fad07b",
      "base_0b": "#8eb38e",
      "base_0c": "#89c2c9",
      "base_0d": "#6d88b0",
      "base_0e": "#b48ead",
      "base_0f": "#9e846e"
    }
  },
  "animation": {
    "enabled": true,
    "duration": 450,
    "fps": 240,
    "style": {
      "movement" : "EaseOutExpo",
      "transparency" : "Linear"
    }
  },
  "transparency": false,

  "monitors": [
    {
      "workspaces": [
        { "name": "1", "layout": "UltrawideVerticalStack" },
        { "name": "2", "layout": "VerticalStack" },
        { "name": "3", "layout": "UltrawideVerticalStack" },
        { "name": "4", "layout": "UltrawideVerticalStack" },
        { "name": "5", "layout": "Columns" },
        { "name": "6", "layout": "Grid" },
        { "name": "7", "layout": "RightMainVerticalStack" },
        { "name": "8", "layout": "UltrawideVerticalStack" },
      ]
    }
  ],
  "bar_config": "$Env:KOMOREBI_CONFIG_HOME/komorebi.bar.json"
}
