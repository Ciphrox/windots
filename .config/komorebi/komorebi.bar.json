{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.38/schema.bar.json",
  "monitor": 0,
  "font_family": "JetBrains Mono",
  "center_widget_padding": 200,
  "theme": {
    "palette": "Custom",
    "accent": "Base0A",
    "colours": {
      "base_00": "#0e1017",
      "base_01": "#161924",
      "base_02": "#23293b",
      "base_03": "#3e465e",
      "base_04": "#5b6685",
      "base_05": "#c0c8d8",
      "base_06": "#e4e8f0",
      "base_07": "#ffffff",
      "base_08": "#e06c75",
      "base_09": "#e69b75",
      "base_0a": "#fad07b",
      "base_0b": "#8eb38e",
      "base_0c": "#89c2c9",
      "base_0d": "#6d88b0",
      "base_0e": "#b48ead",
      "base_0f": "#9e846e"
    }
  },
  "transparency_alpha": 255,

  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": true
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Time": {
        "enable": true,
        "format": "TwelveHourWithoutSeconds",
        "changing_icon": true,
        "label_prefix": "Icon"
      }
    },
    {
      "Media": {
        "enable": true
      }
    }
  ],

  "right_widgets": [
    {
      "Update": {
        "enable": true
      }
    },
    {
      "Memory": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": true,
        "show_total_data_transmitted": false,
        "show_network_activity": true
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Battery": {
        "enable": true
      }
    }
  ]
}
