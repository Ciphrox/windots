{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.38/schema.bar.json",
  "monitor": 0,
  "font_family": "JetBrains Mono",
  "center_widget_padding": 200,
  "theme": {
    "palette": "Custom",
    "accent": "Base0B",
    "colours": {
      "base_00": "#0d1110",
      "base_01": "#121814",
      "base_02": "#1a211e",
      "base_03": "#232a28",
      "base_04": "#5a726d",
      "base_05": "#87a987",
      "base_06": "#a7c080",
      "base_07": "#c5e0c5",
      "base_08": "#e67e80",
      "base_09": "#e69875",
      "base_0a": "#dbbc7f",
      "base_0b": "#a7c080",
      "base_0c": "#83c5be",
      "base_0d": "#7fbbb3",
      "base_0e": "#d699b6",
      "base_0f": "#d3c6aa"
    }
  },
  "transparency_alpha": 255,

  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": true
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Time": {
        "enable": true,
        "format": "TwelveHourWithoutSeconds",
        "changing_icon": true,
        "label_prefix": "Icon"
      }
    },
    {
      "Media": {
        "enable": true
      }
    }
    
  ],

  "right_widgets": [
    {
      "Update": {
        "enable": true
      }
    },
    {
      "Memory": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": true,
        "show_total_data_transmitted": false,
        "show_network_activity": true
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "DayDateMonthYear"
      }
    },
    {
      "Battery": {
        "enable": true
      }
    }
  ]
}
